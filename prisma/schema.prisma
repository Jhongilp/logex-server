// npx prisma db push --force-reset -> reset database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  nit      String     @id
  name     String
  country  String
  city     String
  users    User[]
  customer Customer[]
}

model User {
  id          String   @unique @db.Uuid
  name        String
  email       String   @unique
  company     Company? @relation(fields: [company_nit], references: [nit])
  company_nit String?
}

model Customer {
  id          String     @id @default(uuid())
  name        String
  country     String
  city        String
  address     String
  shippings   Shipping[]
  expos       Expo[]
  company     Company?   @relation(fields: [company_nit], references: [nit])
  company_nit String?
}

model Shipping {
  id             Int      @id @default(autoincrement())
  consignee      String
  notify         String
  country        String
  city           String
  transport_mode String
  address        String
  contact        String
  email          String
  phone          String
  obs            String
  customerId     String
  customer       Customer @relation(fields: [customerId], references: [id])
  expos          Expo[]
}

model Expo {
  id                Int      @id @default(autoincrement())
  consecutivo       String
  status            Int
  globalProgress    Int
  indicatator_month Int
  oc                String
  createdAt         DateTime @default(now())
  shippingId        Int
  shipping          Shipping @relation(fields: [shippingId], references: [id])
  customerId        String
  customer          Customer @relation(fields: [customerId], references: [id])
}
